# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/expense_manager
POSTGRES_DB=expense_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_NAME=expense-receipts
S3_SECURE=false

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Vision API (Optional - Tesseract used as fallback)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Application Configuration
DEBUG=false
LOG_LEVEL=info
CORS_ORIGINS=["http://localhost:3000"]
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf","webp"]

# Security
BCRYPT_ROUNDS=12
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_DEBUG=false
